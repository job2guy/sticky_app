<%title "Login"%>

<% form_for @user_session, :url => login_url do |f| %>

  <div>
		<%= f.error_messages %>
  	<%= f.label :login %><br />
  	<%= f.text_field :login %><br />
  </div>
	<div>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %><br />
	</div>

	<div>
		<%= f.submit "Login" %><p><%=link_to "Signup" , signup_url%> here</p>
	</div>
	
<% end %>