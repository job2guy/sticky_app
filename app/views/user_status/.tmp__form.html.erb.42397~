<% form_for @status ,:url=>{:action=>'update' , :id=>@project.id} do |f| %>
  <%= f.error_messages %>
	<ul>
    <li>
      <a href="#">
        <h2><%=truncate(@project.name, :length =>12, :omission =>"...")%></h2>
		<p id='taskerror'></p>
        <p><%= f.text_area :task ,:size=>'17x4' , :id=>'task_id'%></p>
		<p><%= f.submit "sent"%></p>
      </a>
    </li>
	</ul>
<% end %>
<script>
	var text_task = new LiveValidation('task_id',{ validMessage: "",insertAfterWhatNode: "taskerror"});
	text_task.add( Validate.Presence,{failureMessage: "* Task can't be blank"}  );
</script>